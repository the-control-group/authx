{
	"parser": "babel-eslint",
	"rules": {
		"indent": [
			2,
			"tab"
		],
		"quotes": [
			2,
			"single"
		],
		"linebreak-style": [
			2,
			"unix"
		],
		"semi": [
			2,
			"always"
		],
		"no-console": 0
	},
	"env": {
		"node": true,
		"es6": true,
		"mocha": true
	},
	"globals": {
		"app": true,
		"server": true,
		"agent": true
	},
	"extends": "eslint:recommended"
}
